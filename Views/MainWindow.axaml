<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Writersword.ViewModels"
        x:Class="Writersword.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}"
        Width="1400"
        Height="900"
        Background="#1E1E1E">

    <DockPanel>
        
        <!-- Меню -->
		<Menu DockPanel.Dock="Top"
	           Background="#2D2D30"
	           Padding="5,3">

			<MenuItem Header="_File" Foreground="#F0F0F0" FontSize="13">
				<MenuItem Header="New Project"
						  InputGesture="Ctrl+N"
						  Command="{Binding NewProjectCommand}" />

				<MenuItem Header="Open..."
						  InputGesture="Ctrl+O"
						  Command="{Binding OpenProjectCommand}" />

				<Separator />

				<MenuItem Header="Close" InputGesture="Ctrl+W" />

				<MenuItem Header="Save"
						  InputGesture="Ctrl+S"
						  Command="{Binding SaveProjectCommand}" />

				<Separator />

				<MenuItem Header="Exit"
						  Command="{Binding ExitCommand}" />
			</MenuItem>

			<MenuItem Header="_Edit" Foreground="#F0F0F0" FontSize="13">
				<MenuItem Header="Undo" InputGesture="Ctrl+Z" />
				<MenuItem Header="Redo" InputGesture="Ctrl+Y" />
			</MenuItem>

			<MenuItem Header="_View" Foreground="#F0F0F0" FontSize="13">
				<MenuItem Header="Modules" />
				<MenuItem Header="Settings" />
			</MenuItem>
		</Menu>

        <!-- Document tabs -->
        <Border DockPanel.Dock="Top" 
                Background="#2D2D30"
                BorderBrush="#3E3E42"
                BorderThickness="0,0,0,1"
                Padding="5,3">
            <StackPanel Orientation="Horizontal" Spacing="0">
                
                <!-- Активная вкладка -->
                <Border Background="#1E1E1E"
                        BorderBrush="#007ACC"
                        BorderThickness="0,2,0,0"
                        Padding="12,6">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Book1.writersword" 
                                   Foreground="White"
                                   FontSize="13"
                                   VerticalAlignment="Center" />
                        <Button Content="×" 
                                Padding="3,0"
                                Background="Transparent"
                                Foreground="#999"
                                FontSize="14"
                                Cursor="Hand" />
                    </StackPanel>
                </Border>
                
                <!-- Неактивная вкладка -->
                <Border Background="#2D2D30"
                        Padding="12,6"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="Screenplay.writersword" 
                                   Foreground="#999"
                                   FontSize="13"
                                   VerticalAlignment="Center" />
                        <Button Content="×" 
                                Padding="3,0"
                                Background="Transparent"
                                Foreground="#666"
                                FontSize="14" />
                    </StackPanel>
                </Border>
                
                <!-- Кнопка добавить документ -->
                <Button Content="+" 
                        Padding="10,6"
                        Background="Transparent"
                        Foreground="#999"
                        FontSize="16"
                        Cursor="Hand" />
                
            </StackPanel>
        </Border>

        <!-- Модули (маленькие кнопки) -->
        <Border DockPanel.Dock="Top" 
                Background="#252526"
                BorderBrush="#3E3E42"
                BorderThickness="0,0,0,1"
                Padding="8,4">
            <StackPanel Orientation="Horizontal" Spacing="3">
                
                <!-- Writer модуль (Активный модуль) -->
				<ToggleButton Content="Writer"
                              IsChecked="True"
                              Padding="10,4"
                              Background="#007ACC"
                              Foreground="White"
                              FontSize="12"
                              Cursor="Hand" />
                <!-- Неактивные модули -->
                <ToggleButton Content="Timeline" 
                              Padding="10,4"
                              Background="#3E3E42"
                              Foreground="#CCC"
                              FontSize="12"
                              Cursor="Hand" />
                
                <ToggleButton Content="Characters" 
                              Padding="10,4"
                              Background="#3E3E42"
                              Foreground="#CCC"
                              FontSize="12"
                              Cursor="Hand" />
                
                <ToggleButton Content="Statistics" 
                              Padding="10,4"
                              Background="#3E3E42"
                              Foreground="#CCC"
                              FontSize="12"
                              Cursor="Hand" />
                
                <ToggleButton Content="Synonyms" 
                              Padding="10,4"
                              Background="#3E3E42"
                              Foreground="#CCC"
                              FontSize="12"
                              Cursor="Hand" />
                
                <ToggleButton Content="Notes" 
                              Padding="10,4"
                              Background="#3E3E42"
                              Foreground="#CCC"
                              FontSize="12"
                              Cursor="Hand" />
                
            </StackPanel>
        </Border>

        <!-- Status Bar -->
        <Border DockPanel.Dock="Bottom" 
                Background="#007ACC" 
                Padding="8,3">
            <Grid>
                <TextBlock Text="Ready" 
                           Foreground="White"
                           FontSize="12" />
                <StackPanel HorizontalAlignment="Right" 
                            Orientation="Horizontal" 
                            Spacing="15">
                    <TextBlock Text="Words: 0" Foreground="White" FontSize="12" />
                    <TextBlock Text="Lines: 1" Foreground="White" FontSize="12" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Центральная область -->

		<!-- Центральная область -->
		<ContentControl Content="{Binding CurrentModule}"
						Background="#252526" />
        
    </DockPanel>

</Window>