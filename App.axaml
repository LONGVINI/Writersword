<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:Writersword.Converters"
             x:Class="Writersword.App"
             RequestedThemeVariant="Dark">

	<Application.Resources>
		<converters:TabBackgroundConverter x:Key="TabBackgroundConverter"/>
		<converters:TabForegroundConverter x:Key="TabForegroundConverter"/>
		<converters:BoolToActiveTagConverter x:Key="BoolToActiveTagConverter"/>
	</Application.Resources>

	<Application.Styles>
		<FluentTheme />

		<!-- КРИТИЧНО: Fluent тема для Dock -->
		<StyleInclude Source="avares://Dock.Avalonia.Themes.Fluent/DockFluentTheme.axaml"/>

		<!-- Твои кастомные стили -->
		<StyleInclude Source="/Styles/DockStyles.axaml"/>
	</Application.Styles>

</Application>