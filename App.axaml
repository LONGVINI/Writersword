<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:Writersword.Converters"
             x:Class="Writersword.App"
             RequestedThemeVariant="Dark">

	<Application.Resources>
		<!-- Конвертеры для вкладок -->
		<converters:TabBackgroundConverter x:Key="TabBackgroundConverter"/>
		<converters:TabForegroundConverter x:Key="TabForegroundConverter"/>
		<converters:BoolToActiveTagConverter x:Key="BoolToActiveTagConverter"/>
	</Application.Resources>

	<!-- Application DataTemplates -->
	<Application.DataTemplates>
		<!-- Здесь будут DataTemplates для Dock панелей -->
	</Application.DataTemplates>

	<!-- Application Styles -->
	<Application.Styles>

		<!-- Fluent Theme (основная тема Avalonia) -->
		<FluentTheme />

		<!-- Базовые стили -->
		<!--
        <StyleInclude Source="/Styles/Base/Colors.axaml"/>
        <StyleInclude Source="/Styles/Base/Typography.axaml"/>
        <StyleInclude Source="/Styles/Base/Spacing.axaml"/>
        
        -->
		<!-- Тема по умолчанию (тёмная) -->
		<!--
        <StyleInclude Source="/Styles/Themes/DarkTheme.axaml"/>-->

	</Application.Styles>

</Application>