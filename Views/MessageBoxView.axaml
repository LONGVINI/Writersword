<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Writersword.Views.MessageBoxView"
        Title="Message"
        Width="450"
        Height="220"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent"
        Background="Transparent">

	<Panel>
		<!-- Основной контент -->
		<Border Background="#1E1E1E"
		        CornerRadius="12"
		        Padding="30"
		        BorderBrush="#3E3E42"
		        BorderThickness="1"
		        ClipToBounds="True">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="*" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>

				<!-- Заголовок с иконкой -->
				<StackPanel Grid.Row="0"
				            Orientation="Horizontal"
				            HorizontalAlignment="Center"
				            Margin="0,0,0,20">
					<TextBlock x:Name="IconText"
					           FontSize="24"
					           Margin="0,0,10,0"
					           VerticalAlignment="Center" />
					<TextBlock x:Name="TitleText"
					           FontSize="20"
					           FontWeight="Bold"
					           Foreground="White"
					           VerticalAlignment="Center" />
				</StackPanel>

				<!-- Текст сообщения -->
				<TextBlock Grid.Row="1"
				           x:Name="MessageText"
				           FontSize="14"
				           Foreground="#CCC"
				           TextWrapping="Wrap"
				           HorizontalAlignment="Center"
				           VerticalAlignment="Center"
				           TextAlignment="Center"
				           Margin="0,0,0,20" />

				<!-- Панель кнопок -->
				<StackPanel Grid.Row="2"
				            x:Name="ButtonsPanel"
				            Orientation="Horizontal"
				            HorizontalAlignment="Center"
				            Spacing="10" />
			</Grid>
		</Border>
	</Panel>
</Window>