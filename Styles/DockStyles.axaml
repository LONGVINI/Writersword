<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dock="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia">

	<!-- Стиль для DockControl -->
	<Style Selector="dock|DockControl">
		<Setter Property="Background" Value="#252526" />
	</Style>

	<!-- Стиль для заголовков вкладок -->
	<Style Selector="TabItem">
		<Setter Property="Background" Value="#2D2D30" />
		<Setter Property="Foreground" Value="White" />
		<Setter Property="Padding" Value="10,4" />
		<Setter Property="FontSize" Value="12" />
	</Style>

	<Style Selector="TabItem:selected">
		<Setter Property="Background" Value="#007ACC" />
	</Style>

	<Style Selector="TabItem:pointerover">
		<Setter Property="Background" Value="#4A4A4C" />
	</Style>

	<!-- Стиль для сплиттеров (разделителей) -->
	<Style Selector="GridSplitter">
		<Setter Property="Background" Value="#3F3F46" />
	</Style>

</Styles>